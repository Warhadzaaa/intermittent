<div class="container">

  <div class="d-flex">
    <div class="card_profile_candidate">
      <% if @candidate.avatar.attached? %>
        <%= cl_image_tag(@candidate.avatar.key, width: 50, height: 50, crop: :fill) %>
      <% else %>
        <%= image_tag("https://picsum.photos/400/300", width: 50, height: 50, crop: :fill)%>
      <% end %>

      <h1><%= @candidate.first_name %> <%= @candidate.last_name %></h1>
      <p><%= "Address : #{@candidate.address}" %></p>
      <p><%= @candidate.role %></p>
      <p><%= @candidate.sector %></p>
      <p><%= @candidate.description %></p>
      <p><%= @candidate.experiences %></p>
      <p><%= @candidate.skills %></p>

      <% if current_user == @candidate.user %>
        <div class = "btn-edit">
          <%= link_to 'Edit profile', edit_candidate_path(@candidate.id)%>
        </div>
        <p><%= "Availability : #{@candidate.availability}" %></p>
        <%= simple_form_for @candidate do |f| %>
          <%= f.input :availability %>
          <%= f.button :submit %>
        <% end %>
      <% end %>
    </div>

    <% if current_user.corporate && @company && @project && @candidate %>
        <div class="card_new_task">
          <%= simple_form_for [@company, @project, @candidate, @task] do |f| %>
            <%= f.input :start_date, as: :date, html5: true %>
            <%= f.input :end_date, as: :date, html5: true %>
            <%= f.button :submit %>
          <% end %>
        </div>
      <% end %>

  </div>

  <div class="d-flex">

    <div class="reviews">
      <h1>Reviews</h1>
      <% if @reviews.any? && @reviews != nil %>
        <% @reviews.each do|review| %>
          <div class="review">
            <p><strong><%= review.task.project.company.name %></strong> <% review.rating.times do %>
                                                                          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star-fill" viewBox="0 0 16 16">
                                                                          <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
                                                                          </svg>
                                                                        <% end %>
                                                                        <% (5 - review.rating).times do %>
                                                                          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star" viewBox="0 0 16 16">
                                                                          <path d="M2.866 14.85c-.078.444.36.791.746.593l4.39-2.256 4.389 2.256c.386.198.824-.149.746-.592l-.83-4.73 3.522-3.356c.33-.314.16-.888-.282-.95l-4.898-.696L8.465.792a.513.513 0 0 0-.927 0L5.354 5.12l-4.898.696c-.441.062-.612.636-.283.95l3.523 3.356-.83 4.73zm4.905-2.767-3.686 1.894.694-3.957a.565.565 0 0 0-.163-.505L1.71 6.745l4.052-.576a.525.525 0 0 0 .393-.288L8 2.223l1.847 3.658a.525.525 0 0 0 .393.288l4.052.575-2.906 2.77a.565.565 0 0 0-.163.506l.694 3.957-3.686-1.894a.503.503 0 0 0-.461 0z"/>
                                                                          </svg>
                                                                        <% end %>
                                                                        </p>
            <p><i>"<%= review.content %>"</i></p>
          </div>
        <% end %>
      <% end %>
    </div>



    <% if current_user == @candidate.user %>
      <div class="cards_tasks">
        <% @candidate.tasks.each do |task| %>
          <div class="card_task">
            <p><%= "Project : #{task.project.name}" %></p>
            <p><%= "From #{task.start_date} to #{task.end_date}" %></p>
            <p><%= "Description : #{task.project.description}" %></p>
            <p><%= "Status : #{task.status}" %></p>
            <% if task.status == "Awaiting" %>
              <div class="status">
                <%= simple_form_for (task) do |f| %>
                  <%= f.input :status, collection: ["Accepted", "Declined"] %>
                  <%= f.button :submit %>
                <% end %>
              </div>
              <%#= link_to "Accept", accept_path('task_id' => task) %>
            <% end %>
          </div>

        <% end %>
      </div>
    <% end %>




  </div>

</div>
