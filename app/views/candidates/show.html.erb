<div class="container">

  <div class="d-flex">
    <div class="card_profile_candidate-show">
      <% if @candidate.avatar.attached? %>
        <%= cl_image_tag(@candidate.avatar.key, width: 70, height: 70, crop: :fill) %>
      <% else %>
        <%= image_tag("https://picsum.photos/400/300", width: 70, height: 70, crop: :fill)%>
      <% end %>

      <h1><%= @candidate.first_name %> <%= @candidate.last_name %></h1>
      <h2><%= "#{@candidate.address}" %></h2>
      <h3><%= @candidate.role %></p>
      <h3><%= @candidate.sector %></h3>
      <p><%= @candidate.description %></h3>
      <h4><%= "Experiences" %></h4>
      <p><%= @candidate.experiences %></p>
      <h4><%= "Skills" %></h4>
      <p><%= @candidate.skills %></p>

      <% if current_user == @candidate.user %>
        <div class = "btn-edit">
          <%= link_to 'Edit profile', edit_candidate_path(@candidate.id)%>
        </div>
        <p><%= "Availability : #{@candidate.availability}" %></p>
        <%= simple_form_for @candidate do |f| %>
          <%= f.input :availability %>
          <%= f.button :submit %>
        <% end %>
      <% end %>
    </div>

    <% if current_user.corporate && @company && @project && @candidate %>
        <div class="card_new_task">
          <%= simple_form_for [@company, @project, @candidate, @task] do |f| %>
            <%= f.input :start_date, as: :date, html5: true %>
            <%= f.input :end_date, as: :date, html5: true %>
            <%= f.button :submit %>
          <% end %>
        </div>
      <% end %>

  </div>


  <div class="d-flex">

    <div class="reviews">
      <h1>Reviews</h1>
      <% unless @reviews == [nil] || @reviews.empty? %>
        <% @reviews.each do|review| %>
          <div class="review">
            <p><strong><%= review.task.project.company.name %></strong> - <%= review.rating %>/5</p>
            <p><i>"<%= review.content %>"<i></p>
          </div>
        <% end %>
      <% end %>
    </div>



    <% if current_user == @candidate.user %>
      <div class="cards_tasks">
        <% @candidate.tasks.each do |task| %>
          <div class="card_task">
            <p><%= "Project : #{task.project.name}" %></p>
            <p><%= "From #{task.start_date} to #{task.end_date}" %></p>
            <p><%= "Description : #{task.project.description}" %></p>
            <p><%= "Status : #{task.status}" %></p>
            <% if task.status == "Awaiting" %>
              <div class="status">
                <%= simple_form_for (task) do |f| %>
                  <%= f.input :status, collection: ["Accepted", "Declined"] %>
                  <%= f.button :submit %>
                <% end %>
              </div>
              <%#= link_to "Accept", accept_path('task_id' => task) %>
            <% end %>
          </div>

        <% end %>
      </div>
    <% end %>




  </div>

</div>
