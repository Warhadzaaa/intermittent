  <%= @project.name %> <br>
  <%=link_to "edit", edit_project_path(@project) %> <br>
  <%= link_to "archive", company_projects_path(@project) %> <br>


<%= link_to "search for candidates", company_project_candidates_path(@company, @project) %> <br>

<p>description</p> <%= @project.description %> <br>
<p>start date</p><%= @project.start_date %>
<p>end date</p><%=  @project.end_date %>

<h2>TASKS</h2>
<ul>
<% @project.tasks.each do |task|  %>
  <li><%= task.candidate.first_name %>
  <%= task.candidate.last_name %>
  <%= task.status %>
  <%= task.start_date %>
  <%= task.end_date %>
  <%= simple_form_for (task) do |f| %>
        <%= f.input :status, collection: ["Archived"] %>
        <%= f.button :submit %>
    <% end %>
  <% if task.end_date < Date.today %>
    <%= link_to "Write a review", new_review_path %>
  <% end %>
  </li>
  <br>
<% end %>
</ul>
